generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id               String          @id @default(uuid())
  username         String?         @unique
  email            String          @unique
  password         String?
  phoneNumber      String?
  role             Role            @default(USER)
  status           UserStatus      @default(PENDING)
  inviteToken      String?         @unique
  inviteExpires    DateTime?
  resetToken       String?
  resetTokenExpiry DateTime?
  tickets          Ticket[]
  comments         Comment[]
  inventory        InventoryItem[]
  knowledgeBaseArticles KnowledgeBaseArticle[]
  auditLogs        AuditLog[]
  createdProposals Proposal[] @relation("CreatedProposals")
  assignedProposals Proposal[] @relation("ApproverProposals")
  createdAt        DateTime        @default(now())
}

model Proposal {
  id          String   @id @default(uuid())
  title       String
  description String
  status      ProposalStatus @default(PENDING)
  
  createdById String
  createdBy   User     @relation("CreatedProposals", fields: [createdById], references: [id])
  
  approverId  String
  approver    User     @relation("ApproverProposals", fields: [approverId], references: [id])
  
  adminComment String?
  
  inventoryItemId String?
  inventoryItem   InventoryItem? @relation(fields: [inventoryItemId], references: [id])
  
  ticketId    String?
  ticket      Ticket?  @relation(fields: [ticketId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ProposalStatus {
  PENDING
  APPROVED
  REJECTED
}

model Ticket {
  id              String   @id @default(uuid())
  title           String
  description     String
  status          Status   @default(OPEN)
  priority        Priority @default(MEDIUM)
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  // Link to inventory if applicable
  inventoryItemId String?
  inventoryItem   InventoryItem? @relation(fields: [inventoryItemId], references: [id])
  
  productName     String?  // For custom/personal products or inventory item name
  componentName   String?  // Specifically which part is broken
  
  // AI Triage & Categorization
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id])
  tags            TicketTag[]
  aiSuggestedPriority Priority?
  aiSuggestedCategoryId String?
  
  // SLA Tracking
  firstResponseAt DateTime?
  resolvedAt      DateTime?
  slaBreached     Boolean  @default(false)

  // Resolution
  resolutionDetails String? 
  
  comments        Comment[]
  proposals       Proposal[]
  attachmentUrls  String[]
  auditLogs       AuditLog[]
  knowledgeBaseArticles KnowledgeBaseArticle[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  attachmentUrls String[]
  createdAt DateTime @default(now())
}

model InventoryItem {
  id              String    @id @default(uuid())
  pid             String    @unique        // Public Identifier (e.g., EP-001)
  type            ItemType  @default(LAPTOP)
  
  // -- Assignment & Tracking --
  userId          String?                  // Linked system user
  user            User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  assignedUser    String?                  // Name of person (if not in platform)
  department      String?                  // e.g., "Engineering", "HR"
  location        String?                  // e.g., "Building 4, Floor 2"
  
  // -- Lifecycle & Quality --
  status          InventoryStatus @default(ACTIVE)
  condition       Condition       @default(GOOD)
  
  // -- Hardware Details --
  ownership       Ownership       @default(COMPANY)
  brand           String?
  model           String?
  serialNumber    String?                  // Hardware serial
  password        String?                  // System password if applicable
  
  // -- Hardware Specifications --
  os              String?
  ram             String?                  // e.g., "8GB"
  storage         String?                  // e.g., "480GB"
  processor       String?                  // e.g., "i3 10Gen"
  graphicsCard    String?
  
  // -- Accessories --
  hasCharger      Boolean   @default(true)
  hasMouse        Boolean   @default(false)
  
  // -- Financials --
  price           Float?                   // Purchase price
  vendorInvoice   String?                  // Invoice reference
  purchasedDate   DateTime?
  warrantyDate    DateTime?
  warrantyType    String?                  // e.g., "Warranty" or "Guarantee"
  
  // -- Metadata --
  systemSpecs     Json?                    // Catch-all for extra technical data
  note            String?                  @db.Text
  
  // -- Legacy Migration Data --
  oldTag          String?
  oldUser         String?
  
  // -- Operational History --
  assignedDate    DateTime?
  returnDate      DateTime?
  maintenanceDate DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Inverse Relations
  tickets         Ticket[]
  proposals       Proposal[]
  maintenanceRecords MaintenanceRecord[]
  auditLogs       AuditLog[]
}

enum Condition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  POOR
}

model MaintenanceRecord {
  id              String         @id @default(uuid())
  inventoryItemId String
  inventoryItem   InventoryItem  @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  
  description     String?
  startDate       DateTime       @default(now())
  endDate         DateTime?
  
  cost            Float?
  technician      String?
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum InventoryStatus {
  ACTIVE
  MAINTENANCE
  RETIRED
  LOST
  IN_STORAGE
  SCRAP        // Added for broken/junk items
}

enum Role {
  USER
  AGENT
  ADMIN
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  CANCELLED
  REOPENED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum ItemType {
  COMPUTER
  LAPTOP
  DESKTOP
  MOBILE
  TABLET
  PERIPHERAL
  OTHER
}

enum Ownership {
  COMPANY
  EMPLOYEE
  RENTED
}

enum UserStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

// ============================================
// ENTERPRISE FEATURES MODELS
// ============================================

model Category {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "Hardware", "Network", "Software", "Other"
  description String?
  icon        String?  // Emoji or icon identifier
  color       String?  // Hex color for UI
  tickets     Ticket[]
  knowledgeBaseArticles KnowledgeBaseArticle[]
  createdAt   DateTime @default(now())
}

model Tag {
  id        String      @id @default(uuid())
  name      String      @unique // e.g., "urgent", "battery", "wifi"
  color     String?     // Hex color
  tickets   TicketTag[]
  knowledgeBaseArticles KBArticleTag[]
  createdAt DateTime    @default(now())
}

model TicketTag {
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([ticketId, tagId])
}

model KnowledgeBaseArticle {
  id              String   @id @default(uuid())
  title           String
  content         String   @db.Text // Full article content
  summary         String?  // Short description
  
  // Source tracking
  originalTicketId String?
  originalTicket   Ticket?  @relation(fields: [originalTicketId], references: [id], onDelete: SetNull)
  
  // Categorization
  categoryId      String?
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags            KBArticleTag[]
  
  // Engagement metrics
  views           Int      @default(0)
  upvotes         Int      @default(0)
  
  // Authorship
  createdById     String
  createdBy       User     @relation(fields: [createdById], references: [id])
  
  published       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model KBArticleTag {
  articleId String
  article   KnowledgeBaseArticle @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tagId     String
  tag       Tag                  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime             @default(now())

  @@id([articleId, tagId])
}

model AuditLog {
  id         String   @id @default(uuid())
  
  // What was changed
  entityType String   // "Ticket", "InventoryItem", "User", etc.
  entityId   String   // ID of the entity
  action     String   // "CREATE", "UPDATE", "DELETE", "STATUS_CHANGE", etc.
  
  // Details
  changes    Json?    // Before/after values: { field: { from: "old", to: "new" } }
  metadata   Json?    // Additional context
  
  // Who made the change
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Relations for easier querying
  ticketId   String?
  ticket     Ticket?  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  inventoryItemId String?
  inventoryItem   InventoryItem? @relation(fields: [inventoryItemId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime @default(now())
  
  @@index([entityType, entityId])
  @@index([ticketId])
  @@index([inventoryItemId])
  @@index([createdAt])
}

model AccessRequest {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  department  String
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
